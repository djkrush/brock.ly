div.post
	h1
		a(href=post.url)
			= post.title
	span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
	div.post.content
		!= post.preview
		p
			a(href=post.url, data-disqus-identifier=post.id).comment-count
	div.tags
		- each tag in post.tags
			a(href=tagUrl(tag))
				span.label.label-info #{tag}
