doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title brock.ly RSS
    link(href='http://localhost:3000/')
    description A development blog by Matt Brock
    atom:link(href='http://localhost:3000/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'http://localhost:3000/' + post.url
      item
        title= post.title
        link(href= fullUrl)
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
